@page
@model Apteka_razor.Pages.Drugs.CreateModel
@{
    ViewData["Title"] = "Добавить лекарство";
}

<h2>Добавить лекарство</h2>

<form method="post">
    <div class="form-group">
        <label>Название</label>
        <input asp-for="Drug.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Производитель</label>
        <select asp-for="Drug.Manufacturer" class="form-control" asp-items="Model.ManufacturersList">
            <option value="">-- выберите --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Цена (₸)</label>
        <input asp-for="Drug.Price" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label>Количество</label>
        <input asp-for="Drug.Quantity" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Категория</label>
        <input asp-for="Drug.Category" class="form-control" />
    </div>

    <div class="form-group">
        <label>Описание</label>
        <textarea asp-for="Drug.Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label>Срок годности</label>
        <input asp-for="Drug.ExpirationDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Добавить</button>
</form>
