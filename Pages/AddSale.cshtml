@page
@model Apteka_razor.Pages.AddSaleModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Apteka_razor.Data.Models

@{
    ViewData["Title"] = "Добавить продажу";
}

<h2>Добавить продажу</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="post">
    <div class="mb-3">
        <label class="form-label">Сотрудник</label>
        <select asp-for="Sale.EmployeeId" class="form-select" required>
            <option value="">-- Выберите сотрудника --</option>
            @foreach (var emp in Model.Employees)
            {
                <option value="@emp.Id">@emp.FullName - @emp.Pharmacy?.Name</option>
            }
        </select>
        <span asp-validation-for="Sale.EmployeeId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Дата продажи</label>
        <input asp-for="Sale.SaleDate" type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="Sale.SaleDate" class="text-danger"></span>
    </div>


    <h4>Детали продажи</h4>

    <div id="sale-details">
        @for (int i = 0; i < Model.SaleDetails.Count; i++)
        {
            <div class="row mb-2 sale-detail-row">
                <div class="col-md-5">
                    <label class="form-label">Лекарство</label>
                    <select asp-for="SaleDetails[i].DrugId" class="form-select drug-select" required>
                        <option value="">-- Выберите лекарство --</option>
                        @foreach (var drug in Model.Drugs)
                        {
                            <option value="@drug.Id">@drug.Name - @drug.Price.ToString("C")</option>
                        }
                    </select>
                    <span asp-validation-for="SaleDetails[i].DrugId" class="text-danger"></span>
                </div>
                <div class="col-md-5">
                    <label class="form-label">Количество</label>
                    <input asp-for="SaleDetails[i].Quantity" type="number" min="1" class="form-control quantity-input" placeholder="Количество" required />
                    <span asp-validation-for="SaleDetails[i].Quantity" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    @if (i > 0)
                    {
                        <button type="button" class="btn btn-danger form-control remove-row">✕</button>
                    }
                </div>
            </div>
        }
    </div>

    <button type="button" id="add-row" class="btn btn-secondary mb-3">+ Добавить еще лекарство</button>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Сохранить продажу</button>
        <a asp-page="/Sales" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Добавление новой строки
            document.getElementById('add-row').addEventListener('click', function() {
                const container = document.getElementById('sale-details');
                const index = container.children.length;

                const newRow = document.createElement('div');
                newRow.className = 'row mb-2 sale-detail-row';
                newRow.innerHTML = `
                    <div class="col-md-5">
                        <label class="form-label">Лекарство</label>
                        <select name="SaleDetails[${index}].DrugId" class="form-select drug-select" required>
                            <option value="">-- Выберите лекарство --</option>
                            @foreach (var drug in Model.Drugs)
                            {
                                    <text><option value="@drug.Id">@drug.Name - @drug.Price.ToString("C")</option></text>
                            }
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">Количество</label>
                        <input name="SaleDetails[${index}].Quantity" type="number" min="1" class="form-control quantity-input" placeholder="Количество" required />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <button type="button" class="btn btn-danger form-control remove-row">✕</button>
                    </div>
                `;

                container.appendChild(newRow);
            });

            // Удаление строки
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('remove-row')) {
                    if (document.querySelectorAll('.sale-detail-row').length > 1) {
                        e.target.closest('.sale-detail-row').remove();
                    }
                }
            });
        });
    </script>
}