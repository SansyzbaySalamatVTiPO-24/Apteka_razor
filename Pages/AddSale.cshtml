@page
@model Apteka_razor.Pages.AddSaleModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<h2>Добавить продажу</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="post">
    <div class="mb-3">
        <label>Сотрудник</label>
        <select asp-for="Sale.EmployeeId" class="form-select" required>
            <option value="">-- Выберите сотрудника --</option>
            @foreach (var emp in Model.Employees)
            {
                <option value="@emp.Id">@emp.FullName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label>Дата продажи</label>
        <input asp-for="Sale.Date" type="date" class="form-control" />
    </div>

    <h4>Детали продажи</h4>
    @for (int i = 0; i < Model.SaleDetails.Count; i++)
    {
        <div class="row mb-2">
            <div class="col">
                <select asp-for="SaleDetails[@i].DrugId" class="form-select" required>
                    <option value="">-- Выберите лекарство --</option>
                    @foreach (var drug in Model.Drugs)
                    {
                        <option value="@drug.Id">@drug.Name</option>
                    }
                </select>
            </div>
            <div class="col">
                <input asp-for="SaleDetails[@i].Quantity" type="number" min="1" class="form-control" placeholder="Количество" />
            </div>
        </div>
    }

    <button type="submit" class="btn btn-success mt-3">Сохранить продажу</button>
</form>
